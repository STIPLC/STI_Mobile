<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="@dimen/size_ten"
    android:id="@+id/qb_form_layout3"
    tools:context=".forms_fragment.MotorInsurance.MotorInsureFragment4">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_six"
        >

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorAccent"
            app:sv_selectedTextColor="@color/colorAccent"
            app:sv_stepLineWidth="1dp"
            app:sv_stepPadding="4dp"
            app:sv_nextTextColor="@color/colorAccent"
            app:sv_nextStepLineColor="@color/colorAccent"
            app:sv_doneCircleColor="@color/colorAccent"
            app:sv_doneStepLineColor="@color/colorAccent"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/colorPrimary"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/colorPrimary"
            app:sv_stepNumberTextSize="12sp"
            app:sv_animationType="Line"
            app:sv_stepsNumber="6"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_view"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uploads"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimary"

                />

            <TextView
                android:id="@+id/vehicle_not_compul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Images are not Compulsory"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/front_img_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
                        android:padding="@dimen/size_eight"
                        android:text="Front View of Vehicle"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="@dimen/size_ten"
                        android:visibility="visible"
                        />
                    <Button
                        android:id="@+id/back_img_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
                        android:padding="@dimen/size_eight"
                        android:text="Back View of Vehicle"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="@dimen/size_ten"
                        android:visibility="visible"
                        />
                    <Button
                        android:id="@+id/left_img_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
                        android:padding="@dimen/size_eight"
                        android:text="Left View of Vehicle"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="@dimen/size_ten"
                        android:visibility="visible"
                        />
                    <Button
                        android:id="@+id/right_img_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
                        android:padding="@dimen/size_eight"
                        android:text="Right View of Vehicle"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="@dimen/size_ten"
                        android:visibility="visible"
                        />

                   <LinearLayout
                       android:id="@+id/btn_layout3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:weightSum="2"
                       android:orientation="horizontal">

                       <Button
                           android:id="@+id/v_back_btn2"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:background="@drawable/rounded_bg_color_btn"
                           android:drawableStart="@drawable/ic_chevron_left_black_24dp"
                           android:padding="@dimen/size_ten"
                           android:text="Back"
                           android:layout_gravity="start"
                           android:layout_marginTop="@dimen/size_ten"
                           android:textColor="@color/colorPrimary"
                           android:layout_marginBottom="@dimen/size_ten"
                           android:visibility="visible"
                           />
                       <View
                           android:layout_width="8dp"
                           android:layout_height="wrap_content"


                           />

                       <Button
                           android:id="@+id/v_next_btn2"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:background="@drawable/rounded_right_bg_color_btn"
                           android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                           android:padding="@dimen/size_ten"
                           android:text="Summary"
                           android:layout_gravity="end"
                           android:layout_marginTop="@dimen/size_ten"
                           android:textColor="@color/colorPrimary"
                           android:layout_marginBottom="@dimen/size_ten"
                           android:visibility="visible"
                           />
                   </LinearLayout>


                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/colorAccent"
                        app:indicatorName="BallTrianglePathIndicator"
                        tools:ignore="RtlHardcoded"/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/size_sixteen"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add_black_24dp"
        tools:ignore="VectorDrawableCompat"/>

</FrameLayout>
