<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/MyPopupTheme"
        android:elevation="4dp"
        android:theme="@style/MyToolBarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/colorPrimary"
        app:title="My Claims Detail">


    </androidx.appcompat.widget.Toolbar>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_header"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/status_bg"
                android:src="@drawable/rounded_white"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/size_fifteen"
                android:foregroundGravity="center"
                tools:ignore="Status"/>


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size_six"
                android:layout_marginTop="@dimen/size_six"
                android:text="PENDING"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:background="@drawable/pay_shape"
            android:orientation="vertical"
            android:padding="@dimen/size_ten">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claim \nNumber: "
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="15sp"

                    />

                <TextView
                    android:id="@+id/claim_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$657744.00555555555555555555555555555555555555555555555555555555555555555"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginStart="@dimen/size_ten"

                    />


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost \nEstimate: "
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="15sp"

                    />

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$657744.00555555555555555555555555555555555555555555555555555555555555555"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginStart="@dimen/size_ten"

                    />


            </LinearLayout>

            <TextView
                android:id="@+id/policy_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment for policy ACC/ET/09/19/SA/00092uuuuuubbbbbbbbbbbbbbbbuuuuuuuuuuuuu"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment for policy ACC/ET/09/19/SA/00092uuuuuubbbbbbbbbbbbbbbbuuuuuuuuuuuuu"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/decription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment for policy ACC/ET/09/19/SA/00092uuuuuubbbbbbbbbbbbbbbbuuuuuuuuuuuuu"
                android:textSize="13sp"
                />

