<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_margin="4dp"
    android:id="@+id/transaction_card"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_eight"
        android:orientation="horizontal"
       >
        <ImageView
            android:id="@+id/product_thumnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_ship"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
              <TextView
                  android:id="@+id/policy_num"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="CLOTH TITLE"
                  android:textColor="@color/colorPrimary"
                  android:fontFamily="@font/montserrat_regular"
                  android:textSize="15sp"
                  />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Amount: "
                           android:fontFamily="@font/montserrat_semibold"
                           android:textSize="15sp"

                           />

                       <TextView
                           android:id="@+id/price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="$657744.00"
                           android:textSize="15sp"
                           android:textColor="@color/colorPrimary"
                           android:fontFamily="@font/montserrat_semibold"
                           android:layout_marginStart="@dimen/size_ten"

                           />


                   </LinearLayout>

            <TextView
                android:id="@+id/policy_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Policy Type"
                android:textSize="13sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/date_time"
                    android:gravity="bottom"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="14-0-2019"
                    android:textSize="11sp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/status"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Active"
                    android:layout_marginEnd="1dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/status_bg_active"
                    android:textAlignment="center"

                    />
                <TextView
                    android:id="@+id/payment_status"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Pending"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/status_bg"
                    android:textAlignment="center"

                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>