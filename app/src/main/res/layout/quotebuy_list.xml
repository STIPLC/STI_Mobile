<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/product_layout"
    android:layout_width="match_parent"
    android:padding="@dimen/size_eight"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/size_four"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_marginBottom="@dimen/size_four"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/quote_buy_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/motor"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_gravity="end|bottom"
                android:padding="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Motor Insurance"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_semibold"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>

            </LinearLayout>

        </FrameLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>