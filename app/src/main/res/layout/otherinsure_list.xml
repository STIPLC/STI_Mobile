<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_five"
    android:elevation="@dimen/size_five"
    android:padding="10dp"
    android:layout_margin="@dimen/size_five"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Product: "
                    android:textSize="@dimen/size_twenty"
                    android:layout_margin="6dp"
                    android:textColor="@color/colorGrey"
                    />
                <TextView
                    android:id="@+id/selectedProdList_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="private"
                    android:textSize="@dimen/size_twenty"
                    android:layout_margin="6dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:layout_margin="6dp"
                    android:textSize="@dimen/size_twenty"
                    android:textColor="@color/colorGrey"
                    />
                <TextView
                    android:id="@+id/descriptionList_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acura"
                    android:textSize="@dimen/size_twenty"
                    android:layout_margin="6dp"
                    />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>





</androidx.cardview.widget.CardView>